# AudioBookShelf Companion Configuration

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Path to your AudioBookShelf library directory
# This should be the same path that's mounted in your AudioBookShelf container
AUDIOBOOKSHELF_LIBRARY_PATH=/Volumes/Auryn-SSD1/20 AudioBooks/audiobookshelf/library

# Application settings
APP_NAME=AudioBookShelf Companion
APP_VERSION=0.1.0
NODE_ENV=production

# Database settings
DATABASE_PATH=/data/companion.db

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend API server settings
BACKEND_PORT=8081
BACKEND_HOST=0.0.0.0

# Frontend server settings
FRONTEND_PORT=8080

# Combined production server
PRODUCTION_PORT=8082

# CORS settings (for development)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8082

# =============================================================================
# OPTIONAL API INTEGRATIONS
# =============================================================================

# Goodreads API (for book ratings and metadata)
# Get your key at: https://www.goodreads.com/api/keys
GOODREADS_API_KEY=

# OpenAI API (for AI-powered recommendations)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_GOODREADS_INTEGRATION=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_FEEDBACK_SYSTEM=true
ENABLE_ANALYTICS=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Library scanning settings
SCAN_INTERVAL_MINUTES=60
DEEP_SCAN_INTERVAL_HOURS=24

# Recommendation settings
MAX_RECOMMENDATIONS=10
RECOMMENDATION_CACHE_HOURS=6

# Rate limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/data/logs/app.log

# Session settings
SESSION_SECRET=your-secret-key-change-this-in-production
SESSION_TIMEOUT_HOURS=24

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development database (SQLite file for development)
DEV_DATABASE_PATH=./data/dev.db

# Development API endpoints
DEV_AUDIOBOOKSHELF_URL=http://localhost:13378

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false